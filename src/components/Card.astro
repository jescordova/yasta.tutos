---
const {isActive, icon, title, description, urlProject, urlName, tech, logo, target, show_url, url, show_active} = Astro.props;
---

<div class="flex flex-col max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-(--bg) dark:border-gray-700">
    <span class="flex justify-between items-start pb-4">
        {!icon ? <img src={logo} alt={title} class="w-15 h-15 dark:bg-(--logo) rounded-sm p-1"> : <i class={`${icon} text-7xl text-(--logo)`}></i>}
        {show_active ?  <i class={`${isActive ? 'text-green-500' : 'text-gray-500'} text-2xl bx bxs-check-square`}></i> : ''}
    </span>
    <a href={urlProject} target={target ? '_blank' : ''}>
        <h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white">{title}</h5>
    </a>
    <p class="flex-1 text-sm font-normal text-gray-500 dark:text-(--text) font-thin">{description}</p>
    <div class="flex justify-between">
        <span class="text-sm font-medium text-gray-900 dark:text-white py-2">{tech.join(', ')}</span>
    </div>
    <div class="flex justify-between items-center text-(--links)">
        <a href={urlProject} target={target ? '_blank' : ''} class={`inline-flex items-center text-(--links) hover:underline`}>
            <span class="flex items-center">{urlName}  <i class='bx bx-link-external ml-1'></i></span>
        </a>  
        <a href={url} target={target ? '_blank' : ''} class={`inline-flex items-center text-(--links) hover:underline`}>
            {show_url ? <span class="flex items-center">Code <i class='bx bx-link-external ml-1'></i></span>  : ''}
        </a>
    </div>
</div>
